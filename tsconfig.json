{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "ES2019",
        "rootDir": "./src",
        "outDir": "./lib",
        "noEmitOnError": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "lib": [
            "ES2020",
            "dom"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots" : ["./src/types", "./node_modules/@types"]

    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
